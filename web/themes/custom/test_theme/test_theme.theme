<?php

/**
 * Implements hook_preprocess_HOOK() for block templates.
 */
function test_theme_preprocess_block(&$variables) {
  // Verifica si la región es 'content' para aplicar los estilos específicos.
  if ($variables['elements']['#region'] == 'content') {
    // Agrega la biblioteca de estilos del bloque.
    $variables['#attached']['library'][] = 'test_theme/block-styling';
  }
}
